# Example environment variables for local development
# Copy this to .env.local and fill in your values

# Database connection (PostgreSQL)
# For local PostgreSQL:
# POSTGRES_URL="postgres://username:password@localhost:5432/pastebin"

# For Vercel Postgres (automatically set on Vercel):
# POSTGRES_URL="provided by Vercel"
# POSTGRES_PRISMA_URL="provided by Vercel"
# POSTGRES_URL_NON_POOLING="provided by Vercel"

# Base URL (for generating paste URLs)
# In production, this will be automatically set by Vercel
NEXT_PUBLIC_BASE_URL="http://localhost:3000"

# Test mode (set to "1" to enable deterministic time testing)
# TEST_MODE="1"
